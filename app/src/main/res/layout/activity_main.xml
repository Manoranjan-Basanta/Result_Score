<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="487dp"
        android:orientation="vertical"
        android:background="@drawable/gradient_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="23dp"
           android:paddingHorizontal="18dp"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/back"/>
           <Space
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="0dp"/>
           <ImageView
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:src="@drawable/ic_questionmark"
               android:background="@drawable/borders_question"/>
       </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp"
                android:layout_marginTop="34dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Your Result"
                    android:textColor="#053742"
                    android:textSize="20dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/calender_icon"
                        android:fontFamily="@font/mulish"
                        android:text="Fri, 25 Aug 2023"
                        android:textColor="#053742"
                        android:textSize="12sp" />
                    <Space
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:04pm"
                        android:fontFamily="@font/mulish"
                        android:textColor="#053742"
                        android:drawableLeft="@drawable/clock_icon"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
            <RelativeLayout
                android:layout_width="218dp"
                android:layout_marginTop="5dp"
                android:layout_height="218dp">

                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:textColor="@android:color/transparent"
                    android:id="@+id/circular_progress">
                </antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator>
                <LinearLayout
                    android:layout_width="186dp"
                    android:layout_height="186dp"
                    android:layout_centerInParent="true"/>
                <LinearLayout
                    android:layout_width="164dp"
                    android:layout_height="164dp"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="54dp"
                    android:paddingVertical="20dp">
                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@drawable/ic_round_man" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text=" Score"
                        android:textColor="#053742"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="99%"
                        android:textColor="#00A36C"
                        android:textSize="25sp" />
                </LinearLayout>
            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="168dp"
                    android:layout_height="190dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borders_liverfunction">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="17dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/lipid_icon"/>
                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    app:textColor="@android:color/transparent"
                                    app:progressBackgroundColor="@color/white"
                                    app:direction="clockwise"
                                    android:id="@+id/circular_progress1"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/txt_liver_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="33%"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingHorizontal="5dp"
                                android:textColor="#E64C3C"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Keep monitioring daily for a week"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Liver Function"
                                android:textSize="18sp"
                                android:textColor="#053742"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="168dp"
                    android:layout_height="121dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borders_liverfunction">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="17dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/lipid_icon"/>
                        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            app:textColor="@android:color/transparent"
                            android:id="@+id/circular_progress2"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/txt_lipid_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="33%"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingHorizontal="5dp"
                                android:textColor="#F0C419"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Come back\n in a week"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Lipid Profile"
                                android:textSize="18sp"
                                android:textColor="#053742"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="121dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borders_liverfunction">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/kidney_icon"/>
                        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            app:textColor="@android:color/transparent"
                            android:id="@+id/circular_progress3"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/txt_kidney_function"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="33%"
                            android:fontFamily="@font/poppins_bold"
                            android:paddingHorizontal="5dp"
                            android:textColor="#F0C419"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Come back\n in a week"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Kidney Functon"
                            android:textSize="18sp"
                            android:textColor="#053742"/>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="168dp"
                    android:layout_height="121dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borders_liverfunction">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="17dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/lungs_icon"/>
                            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                android:layout_width="45dp"
                                android:layout_height="45dp"

                                app:textColor="@android:color/transparent"
                                android:id="@+id/circular_progress4"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/txt_lungs_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="33%"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingHorizontal="5dp"
                                android:textColor="#35BE83"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Everything looks good"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Lungs Function"
                                android:textSize="18sp"
                                android:textColor="#053742"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="168dp"
                    android:layout_height="121dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borders_liverfunction">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="17dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/diabetes"
                                    android:layout_centerInParent="true"/>
                            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:textColor="@android:color/transparent"
                                android:id="@+id/circular_progress5"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/txt_diabetes_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="33%"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingHorizontal="5dp"
                                android:textColor="#35BE83"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Everything looks good"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Diabetes"
                                android:textSize="18sp"
                                android:textColor="#053742"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
